@model HeyBus.Models.Passagem

@{
    ViewBag.Title = "Comprar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <h2>Comprar</h2>
    <div>
        @Html.HiddenFor(model => model.viag.id_Viagem)
        @Html.HiddenFor(model => model.cli.id_Cliente)
        <br />
        <br />
        <dl>
            <dt>
                @Html.DisplayFor(model => model.oni.viacao_Onibus)
            </dt>
            <dt>
                @Html.DisplayFor(model => model.oni.categoria_Onibus)
            </dt>
            <dt>
                @Html.DisplayFor(model => model.rot.destino_Rota)
            </dt>
            <dt>
                @Html.DisplayFor(model => model.rot.origem_Rota)
            </dt>
            <dt>
                @Html.DisplayFor(model => model.viag.valor_Viagem)
            </dt>
        </dl>
    </div>
    foreach(var itens in (SelectList)ViewBag.bancos)
    {
        <input type="button" value="@itens.Text" id="@itens.Value" class="btn-buscar-viagem-home"/>
    }
    <input type="button" value="Comprar" class="btn-buscar-viagem-home" />
}
