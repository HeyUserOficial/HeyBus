@{
    ViewData["Title"] = "Home Page";
}


<section id="sliderHome" class="carousel slide d-none d-sm-block" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#sliderHome" data-slide-to="0" class="active"></li>
        <li data-target="#sliderHome" data-slide-to="1"></li>
        <li data-target="#sliderHome" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/images/imagemHome.jpg" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>Algum texto aqui?</h5>
                <p>Vai ter q formatar.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/rio.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/fortaleza.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#sliderHome" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <!-- <a class="carousel-control-next" href="#sliderHome" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
      </a> setas de controle-->
</section>
<section id="invisivel" class="d-block d-sm-none" style="height:100vh">
    <!--Usando para o texto não subir quando desabilitar o slide-->
</section>
<div class="mt-5 row w-100 align-items-center bg-light p-3 m-0">
    <aside id="box-comprar-passagem" class="col-md-6 col-lg-4 ml-5 mr-3">
        <p>Confira as viagens e compre a <span>passagem</span> que mais se adequa a você!</p>
        <form id="form-compra-passagem">

            <div class="form-group">
                <label for="origem">Origem</label>
                <input type="text" class="design-input-comprar" id="origem" placeholder="Digite seu ponto de partida.">
            </div>
            <div class="form-group">
                <label for="destino">Destino</label>
                <input type="text" class="design-input-comprar" id="destino" placeholder="Digite seu destino.">
            </div>
            <div class="form-row">
                <div class="form-group col-6 col-sm-12 col-md-6">
                    <label for="dataIda">Data de Saída</label>
                    <input type="date" class="design-input-comprar" id="dataIda">
                </div>
                <div class="form-group col-6 col-sm-12 col-md-6">
                    <label for="dataVolta">Data de Volta</label>
                    <input type="date" class="design-input-comprar" id="dataVolta">
                    <small id="dataVoltaInfo" class="form-text text-muted">(Opcional)</small>
                </div>
                <div class="form-row col-12 justify-content-center">
                    <button type="submit" class="btn col-8 ">Buscar</button>
                </div>
            </div>

        </form>
    </aside>
    <article id="boasVindas" class="col-md-5 col-lg-7 text-center">
        <h1>Bem Vindos ao site oficial da HeyBus!</h1>
        <h2>Aqui você encontra tudo sobre nós.</h2>
        <ul>
            <li><img src="~/images/historia.gif" style="width:30px;" /> História</li>
            <li><img src="~/images/viagem.gif" style="width:30px;" /> Viagens</li>
            <li><img src="~/images/servicos.gif" style="width:30px;" /> Serviços</li>
            <li><img src="~/images/duvidas.gif" style="width:30px;" /> Tira suas dúvidas</li>
        </ul>
        E muitas outras coisas... Navegue e descubra mais!
    </article>
</div>
