@model HeyBus.Models.Acesso

@{
    ViewBag.Title = "LoginFuncionario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>LoginFuncionario</h2>

@using (Html.BeginForm())
{ 

    @Html.AntiForgeryToken()
<div class="login-funcionario" style="margin-top:150px!important;">
    <h1>Acesso</h1>
    <form>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.login_Acesso, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.login_Acesso, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.login_Acesso, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.password_Acesso, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.password_Acesso, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.password_Acesso, "", new { @class = "text-danger" })
            </div>
        </div>
    </form>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Login" class="btn btn-default" />
        </div>
    </div>
</div> 
    
}
