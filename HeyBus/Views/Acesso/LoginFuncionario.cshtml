@{
    ViewBag.Title = "LoginCliente";
    Layout = "~/Views/Shared/_LayoutFuncionarioSemNav.cshtml";
}
@model HeyBus.Models.Acesso
<body style="background-image: linear-gradient(to left, rgba(144, 76, 28, 0.7411764705882353), rgba(255, 165, 0, 0.08))">
    <div class="login-funcionario d-flex col-10 ml-lg-5">
        <div class="img-login-func">
            <img src="~/images/bus_login_func.png" />
        </div>
        <div class="form-login-func">
            <h2 class="m-1 ml-2"style="font-size:1.5rem;font-weight:600; color:rgba(42,42,42,.75)">Login</h2>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <form>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="">

                        <div class="col-11">
                            @Html.EditorFor(model => model.login_Acesso, new { htmlAttributes = new { @class = "input-login-func", placeholder = "Usuário" } })
                            @Html.ValidationMessageFor(model => model.login_Acesso, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="">

                        <div class="col-11">
                            @Html.EditorFor(model => model.password_Acesso, new { htmlAttributes = new { @class = "input-login-func", placeholder = "Senha" } })
                            @Html.ValidationMessageFor(model => model.password_Acesso, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </form>
                <div class="mt-4 ml-2">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Login" class="btn-login mr-5" /> <a href="~/Home/Index">Voltar a página inicial</a>
                    </div>
                </div>


            }
        </div>
        <div class="informativo-login d-none d-xl-block">
            <h1>Faça login no sistema da HeyBus</h1>
            <h2>Não possui cadastro no sistema?</h2>
            <p>Entre em contato com o responsável pelos cadastros de funcionários ou com a equipe de T.I.</p>
        </div>
    </div>
</body>

