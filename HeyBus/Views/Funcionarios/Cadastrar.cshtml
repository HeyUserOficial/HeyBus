@{ 
    Layout = "~/Views/Shared/_LayoutFuncionario .cshtml";
}
@model HeyBus.Models.Funcionario

<div class="box-cadastro-funcionario">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

