@model HeyBus.Models.Viagem

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Viagem</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.data_Viagem, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.data_Viagem, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.data_Viagem.Date, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.horario_Viagem, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.horario_Viagem, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.horario_Viagem, "", new { @class = "text-danger" })
        </div>
    </div>
    <div>
        @Html.LabelFor(m => m.oni.viacao_Onibus)
        @Html.DropDownList("viacao", "Viações")
    </div>
    <div>
        @Html.LabelFor(m => m.oni.categoria_Onibus)
        @Html.DropDownList("categoria", "Categorias")
    </div>
    <div>
        @Html.LabelFor(m => m.rot.destino_Rota)
        @Html.DropDownList("destino", "Destinos")
    </div>
    <div>
        @Html.LabelFor(m => m.rot.origem_Rota)
        @Html.DropDownList("origem", "Origens")
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.valor_Viagem, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.valor_Viagem, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.valor_Viagem, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}
